<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/LinearVerticalDefault">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">
        <TextView
            android:id="@+id/tv_saldo"
            style="@style/TextBig"
            android:textColor="@color/white"
            android:text="@string/dummy_saldo" />
    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        style="@style/NestedScrollDefault">
        <androidx.constraintlayout.widget.ConstraintLayout
            style="@style/ConstraintDefault">
            <View
                android:id="@+id/view_bg"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@color/colorPrimary"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_menu_1"
                style="@style/CardWrapHeight"
                android:layout_marginTop="@dimen/dimens_40dp"
                android:layout_marginStart="@dimen/dimens_10dp"
                android:layout_marginEnd="@dimen/dimens_10dp"
                app:layout_constraintTop_toTopOf="@id/view_bg"
                app:layout_constraintBottom_toBottomOf="@id/view_bg"
                app:layout_constraintLeft_toLeftOf="@id/view_bg"
                app:layout_constraintRight_toRightOf="@id/view_bg">
                <androidx.constraintlayout.widget.ConstraintLayout
                    style="@style/RelativeDefault"
                    android:layout_marginStart="@dimen/dimens_10dp"
                    android:layout_marginEnd="@dimen/dimens_10dp"
                    android:layout_marginTop="@dimen/dimens_18dp"
                    android:layout_marginBottom="@dimen/dimens_18dp">
                    <ImageView
                        android:id="@+id/btn_setting"
                        style="@style/ImageViewWrapAll"
                        android:padding="@dimen/dimens_10dp"
                        android:src="@drawable/ic_gear_option"
                        android:foreground="?selectableItemBackground"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/btn_chart"/>
                    <ImageView
                        android:id="@+id/btn_chart"
                        style="@style/ImageViewWrapAll"
                        android:padding="@dimen/dimens_10dp"
                        android:layout_marginStart="@dimen/dimens_20dp"
                        android:src="@drawable/ic_shopping_basket"
                        android:foreground="?selectableItemBackground"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/btn_setting"/>
                    <LinearLayout
                        android:id="@+id/btn_family_tree"
                        style="@style/LinearVerticalWrapAll"
                        android:gravity="center"
                        android:layout_marginEnd="@dimen/dimens_20dp"
                        android:foreground="?selectableItemBackground"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintHorizontal_bias="1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/btna_add_family">
                        <ImageView
                            style="@style/ImageViewWrapAll"
                            android:src="@drawable/ic_family_tree"/>
                        <TextView
                            style="@style/TextNormal"
                            android:textAlignment="center"
                            android:layout_marginTop="@dimen/dimens_10dp"
                            android:text="@string/label_family_tree"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/btna_add_family"
                        style="@style/LinearVerticalWrapAll"
                        android:gravity="center"
                        android:foreground="?selectableItemBackground"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/btn_family_tree"
                        app:layout_constraintRight_toRightOf="parent">
                        <ImageView
                            style="@style/ImageViewWrapAll"
                            android:src="@drawable/ic_new_user"/>
                        <TextView
                            style="@style/TextNormal"
                            android:textAlignment="center"
                            android:layout_marginTop="@dimen/dimens_10dp"
                            android:text="@string/label_tambah_family"/>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_menu_2"
                style="@style/CardWrapHeight"
                android:layout_marginStart="@dimen/dimens_10dp"
                android:layout_marginEnd="@dimen/dimens_10dp"
                android:layout_marginTop="@dimen/dimens_20dp"
                app:layout_constraintTop_toBottomOf="@id/card_menu_1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    style="@style/ConstraintWrapHeight"
                    android:layout_margin="@dimen/dimens_20dp">
                    <LinearLayout
                        android:id="@+id/btn_cek_saldo"
                        style="@style/LinearVerticalWrapAll"
                        android:layout_width="@dimen/dimens_0dp"
                        android:gravity="center"
                        android:foreground="?selectableItemBackground"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/btn_diamond_paket"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/btn_isi_saldo">
                        <ImageView
                            style="@style/ImageViewWrapAll"
                            android:src="@drawable/ic_wallet"/>
                        <TextView
                            style="@style/TextNormal"
                            android:text="@string/label_cek_saldo_bonus"
                            android:textAlignment="center"
                            android:layout_marginTop="@dimen/dimens_10dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/btn_isi_saldo"
                        style="@style/LinearVerticalWrapAll"
                        android:layout_width="@dimen/dimens_0dp"
                        android:gravity="center"
                        android:foreground="?selectableItemBackground"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintTop_toTopOf="@id/btn_cek_saldo"
                        app:layout_constraintBottom_toBottomOf="@id/btn_cek_saldo"
                        app:layout_constraintLeft_toRightOf="@id/btn_cek_saldo"
                        app:layout_constraintRight_toLeftOf="@id/btn_tarik_saldo">
                        <ImageView
                            style="@style/ImageViewWrapAll"
                            android:src="@drawable/ic_wallet_in"/>
                        <TextView
                            style="@style/TextNormal"
                            android:text="@string/btn_isi_saldo"
                            android:textAlignment="center"
                            android:layout_marginTop="@dimen/dimens_10dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/btn_tarik_saldo"
                        style="@style/LinearVerticalWrapAll"
                        android:layout_width="@dimen/dimens_0dp"
                        android:gravity="center"
                        android:foreground="?selectableItemBackground"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintTop_toTopOf="@id/btn_cek_saldo"
                        app:layout_constraintBottom_toBottomOf="@id/btn_cek_saldo"
                        app:layout_constraintLeft_toRightOf="@id/btn_isi_saldo"
                        app:layout_constraintRight_toLeftOf="@id/btn_beli_produk">
                        <ImageView
                            style="@style/ImageViewWrapAll"
                            android:src="@drawable/ic_wallet_out"/>
                        <TextView
                            style="@style/TextNormal"
                            android:text="@string/label_tarik_saldo"
                            android:textAlignment="center"
                            android:layout_marginTop="@dimen/dimens_10dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/btn_beli_produk"
                        style="@style/LinearVerticalWrapAll"
                        android:layout_width="@dimen/dimens_0dp"
                        android:gravity="center"
                        android:foreground="?selectableItemBackground"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintTop_toTopOf="@id/btn_cek_saldo"
                        app:layout_constraintBottom_toBottomOf="@id/btn_cek_saldo"
                        app:layout_constraintLeft_toRightOf="@id/btn_tarik_saldo"
                        app:layout_constraintRight_toRightOf="parent">
                        <ImageView
                            style="@style/ImageViewWrapAll"
                            android:src="@drawable/ic_shopping_basket"/>
                        <TextView
                            style="@style/TextNormal"
                            android:text="@string/label_beli_produk"
                            android:textAlignment="center"
                            android:layout_marginTop="@dimen/dimens_10dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/btn_diamond_paket"
                        style="@style/LinearVerticalWrapAll"
                        android:layout_width="@dimen/dimens_0dp"
                        android:gravity="center"
                        android:foreground="?selectableItemBackground"
                        android:layout_marginTop="@dimen/dimens_20dp"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintTop_toBottomOf="@id/btn_cek_saldo"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/btn_gold_paket">
                        <ImageView
                            style="@style/ImageViewWrapAll"
                            android:src="@drawable/ic_diamond"/>
                        <TextView
                            style="@style/TextNormal"
                            android:text="@string/label_paket_diamond"
                            android:textAlignment="center"
                            android:layout_marginTop="@dimen/dimens_10dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/btn_gold_paket"
                        style="@style/LinearVerticalWrapAll"
                        android:layout_width="@dimen/dimens_0dp"
                        android:gravity="center"
                        android:foreground="?selectableItemBackground"
                        android:layout_marginTop="@dimen/dimens_20dp"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintTop_toBottomOf="@id/btn_cek_saldo"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/btn_diamond_paket"
                        app:layout_constraintRight_toLeftOf="@id/btn_basic_paket">
                        <ImageView
                            style="@style/ImageViewWrapAll"
                            android:src="@drawable/ic_gold_ingots"/>
                        <TextView
                            style="@style/TextNormal"
                            android:text="@string/label_paket_diamond"
                            android:textAlignment="center"
                            android:layout_marginTop="@dimen/dimens_10dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/btn_basic_paket"
                        style="@style/LinearVerticalWrapAll"
                        android:layout_width="@dimen/dimens_0dp"
                        android:gravity="center"
                        android:foreground="?selectableItemBackground"
                        android:layout_marginTop="@dimen/dimens_20dp"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintTop_toBottomOf="@id/btn_cek_saldo"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/btn_gold_paket"
                        app:layout_constraintRight_toLeftOf="@id/btn_list_product">
                        <ImageView
                            style="@style/ImageViewWrapAll"
                            android:src="@drawable/ic_gift"/>
                        <TextView
                            style="@style/TextNormal"
                            android:text="@string/label_paket_basic"
                            android:textAlignment="center"
                            android:layout_marginTop="@dimen/dimens_10dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/btn_list_product"
                        style="@style/LinearVerticalWrapAll"
                        android:layout_width="@dimen/dimens_0dp"
                        android:gravity="center"
                        android:foreground="?selectableItemBackground"
                        android:layout_marginTop="@dimen/dimens_20dp"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintTop_toBottomOf="@id/btn_cek_saldo"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/btn_basic_paket"
                        app:layout_constraintRight_toRightOf="parent">
                        <ImageView
                            style="@style/ImageViewWrapAll"
                            android:src="@drawable/ic_gift_box"/>
                        <TextView
                            style="@style/TextNormal"
                            android:text="@string/label_list_produk"
                            android:textAlignment="center"
                            android:layout_marginTop="@dimen/dimens_10dp"/>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_member"
                style="@style/TextInputLayoutDefault"
                android:layout_marginTop="@dimen/dimens_20dp"
                android:layout_marginStart="@dimen/dimens_10dp"
                android:layout_marginEnd="@dimen/dimens_10dp"
                app:layout_constraintTop_toBottomOf="@id/card_menu_2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
                <EditText
                    android:id="@+id/et_member"
                    style="@style/EditTextDefault"
                    android:hint="@string/hint_input_member"
                    android:inputType="textPersonName"/>
            </com.google.android.material.textfield.TextInputLayout>

            <RelativeLayout
                android:id="@+id/btn_add_member"
                style="@style/RelativeButton"
                android:layout_marginStart="@dimen/dimens_10dp"
                android:layout_marginEnd="@dimen/dimens_10dp"
                android:layout_marginTop="@dimen/dimens_10dp"
                app:layout_constraintTop_toBottomOf="@id/til_member"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
                <ProgressBar
                    android:id="@+id/pb_btn_add_member"
                    style="?android:progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/tv_btn_add_member"
                    style="@style/TextBig"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:text="@string/btn_input_member"/>
            </RelativeLayout>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/vp_slider"
                style="@style/ViewPagerRatio"
                android:layout_marginTop="@dimen/dimens_20dp"
                android:layout_marginStart="@dimen/dimens_10dp"
                android:layout_marginEnd="@dimen/dimens_10dp"
                android:layout_marginBottom="@dimen/dimens_20dp"
                app:layout_constraintDimensionRatio="2:1"
                app:layout_constraintTop_toBottomOf="@id/btn_add_member"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_slider"
                style="@style/TabLayoutSlider"
                app:layout_constraintVertical_bias="0.9"
                app:layout_constraintTop_toTopOf="@id/vp_slider"
                app:layout_constraintBottom_toBottomOf="@id/vp_slider"
                app:layout_constraintLeft_toLeftOf="@id/vp_slider"
                app:layout_constraintRight_toRightOf="@id/vp_slider"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>