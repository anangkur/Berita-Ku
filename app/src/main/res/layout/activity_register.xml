<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ConstraintDefault">

    <include layout="@layout/layout_toolbar"/>

    <ImageView
        android:id="@+id/ic_logo"
        style="@style/ImageViewError"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_appname"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.2"/>

    <TextView
        android:id="@+id/tv_appname"
        style="@style/TextSuperExtraBig"
        android:text="@string/app_name"
        android:layout_marginTop="@dimen/dimens_10dp"
        app:layout_constraintTop_toBottomOf="@id/ic_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_nama"
        style="@style/TextInputLayoutDefault"
        android:layout_marginStart="@dimen/dimens_20dp"
        android:layout_marginEnd="@dimen/dimens_20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_appname"
        app:layout_constraintBottom_toTopOf="@id/til_email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.1">
        <EditText
            android:id="@+id/et_nama"
            style="@style/EditTextDefault"
            android:hint="@string/hint_full_name"
            android:inputType="textPersonName"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_email"
        style="@style/TextInputLayoutDefault"
        android:layout_width="@dimen/dimens_0dp"
        app:layout_constraintTop_toBottomOf="@id/til_nama"
        app:layout_constraintBottom_toTopOf="@id/til_password"
        app:layout_constraintLeft_toLeftOf="@id/til_nama"
        app:layout_constraintRight_toRightOf="@id/til_nama"
        app:layout_constraintVertical_chainStyle="packed">
        <EditText
            android:id="@+id/et_email"
            style="@style/EditTextDefault"
            android:hint="@string/hint_email"
            android:inputType="textEmailAddress"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_password"
        style="@style/TextInputLayoutDefault"
        android:layout_width="@dimen/dimens_0dp"
        app:passwordToggleEnabled="true"
        app:layout_constraintTop_toBottomOf="@id/til_email"
        app:layout_constraintBottom_toTopOf="@id/til_password_confirm"
        app:layout_constraintLeft_toLeftOf="@id/til_nama"
        app:layout_constraintRight_toRightOf="@id/til_nama">
        <EditText
            android:id="@+id/et_password"
            style="@style/EditTextDefault"
            android:hint="@string/hint_password"
            android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_password_confirm"
        style="@style/TextInputLayoutDefault"
        android:layout_width="@dimen/dimens_0dp"
        app:passwordToggleEnabled="true"
        app:layout_constraintTop_toBottomOf="@id/til_password"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/til_nama"
        app:layout_constraintRight_toRightOf="@id/til_nama">
        <EditText
            android:id="@+id/et_password_confirm"
            style="@style/EditTextDefault"
            android:hint="@string/hint_password_confirm"
            android:inputType="textPassword"/>
    </com.google.android.material.textfield.TextInputLayout>

    <RelativeLayout
        android:id="@+id/btn_signup"
        style="@style/RelativeButton"
        android:layout_width="@dimen/dimens_0dp"
        app:layout_constraintTop_toBottomOf="@id/til_password_confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/til_nama"
        app:layout_constraintRight_toRightOf="@id/til_nama"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.2">
        <TextView
            android:id="@+id/tv_btn_signup"
            style="@style/TextBig"
            android:layout_centerInParent="true"
            android:text="@string/btn_sign_up"
            android:textColor="@color/white"/>
        <ProgressBar
            android:id="@+id/pb_btn_signup"
            style="?android:progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
